/**index.wxss**/

page {
  -webkit-font-smoothing: antialiased;
  font-family: "PingHei", "Helvetica Neue", "Helvetica", "Arial", "Verdana", "sans-serif";
  
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  color: #fff;
  font-size: 30rpx;
  overflow: scroll;
}

.bcg {
  position: fixed;
  z-index: 2;
  height: 100%;
  width: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.container .content {
  flex: 2;
  transform: 0.3s ease;
}

.content {
  position: relative;
  z-index: 2;
}

.avatarInfo {
  display: flex;
  align-items: center;
  padding: 0 50rpx;
}

.avatarInfo .avatar {
  display: block;
  overflow: hidden;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.avatarInfo .name {
  /* padding这个写法意义：上下内边距是 0，左右内边距是 20 */
  padding: 0 20rpx;
  font-size: 30rpx;
}

.avatarInfo .downArrow {
  width: 20rpx;
  height: 20rpx;
}

.info {
  padding: 10rpx 0 50rpx;
}

.city {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  padding: 0 50rpx;
  font-size: 66rpx;
}

.city .name {
  display: flex;
  justify-content: center;
  align-items: center;
}

.city .name .val {
  max-width: 5em;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.city .name .icon, .city .name .down {
  width: 30rpx;
  height: 30rpx;
}

.city .name .icon {
  margin-right: 20rpx;
}

.city .name .down {
  margin-left: 20rpx;
}

.city .time {
  display: block;
  text-align: right;
  font-size: 24rpx;
}

.message {
  font-size: 22rpx;
  color: #fff;
  padding: 30rpx 50rpx 0;
  box-sizing: border-box;
}

.tempContainer {
  height: 360rpx;
}

.temp {
  font-size: 200rpx;
  font-weight: 300;
}

.weatherCond {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0rpx 50rpx;
}

.info .tempContainer, .info .pm, .info .windContainer {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.weatherCond .weather {
  margin-bottom: 30rpx;
  font-size: 40rpx;
}

.weatherCond .weatherIcon {
  width: 120rpx;
  height: 120rpx;
}

.humidity, .wind {
  font-size: 30rpx;
  padding: 0rpx 15rpx;
}

.info .pm {
  padding: 15rpx;
  margin-bottom: 30rpx;
}

.info .pm text {
  font-size: 24rpx;
  height: 1em;
  line-height: 1em;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(240, 240, 240, 0.2);
}

.moreWeather {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  overflow-x: scroll;
}

.more {
  justify-content: flex-start;
}

.less {
  justify-content: space-evenly;
}

.moreWeather .item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  min-width: 180rpx;
  flex-shrink: 0;
  font-size: 24rpx;
}

.item .itemWeatherCond, .item .tmp, .item .itemWind, .item .date {
  padding: 5rpx 0rpx;
}

.item .itemWeatherCond {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.itemWeatherCond image {
  width: 44rpx;
}

.details, .lifestyles {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  background: rgba(0, 0, 0, 0.6);
  font-size: 24rpx;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
}

.details .detail {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  width: 25%;
  height: 100rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(250, 250, 250, 0.2);
  border-right: 1rpx solid rgba(250, 250, 250, 0.2);
}

.lifestyles .lifestyle {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  width: 25%;
  height: 160rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(250, 250, 250, 0.2);
  border-right: 1rpx solid rgba(250, 250, 250, 0.2);
}

.lifestyle {
  font-size: 26rpx;
}

.lifestyle image {
  width: 44rpx;
}
.lifestyle .dfont {
  font-size: 18rpx;
}
