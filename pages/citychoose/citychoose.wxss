/* pages/citychoose/citychoose.wxss */

.container {
  min-height: 100vh;
  display: flex;
  background: #2d2225;
  flex-direction: column;
  margin-bottom: 20rpx;
  color: #fff;
}

.hotcityContainer {
  display: flex;
  flex-direction: column;
  padding: 30rpx 30rpx 20rpx;
}

.hotcity {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 10rpx;
  justify-content: space-between;
  
}

.hotcity .title {
  font-size: 32rpx;
}

.hotcity .location {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.hotcity .cell {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%;
  height: 60rpx;
  background: #b9babb;
  border-radius: 8rpx;
  color: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.hotcity .active {
  background: #40a7e7;
  color: #fff;
}

.citylist {
  font-size: 32rpx;
  color: #fff;
  padding: 30rpx 30rpx 20rpx;
}

.citylist .letter {
  background: #b9babb;
  height: 50rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.citylist .citycell {
  border-bottom: 1rpx solid #cfcdcd;
  height: 98rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.citylist .citycell:last-child {
  border-bottom: none;
}

.citylist .cityhover {
  background: #665a5d;
}
